@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.PropertyEditors.ValueConverters;
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper
@{
    var articleImage = Model.Value<IPublishedContent>("ReviewsSectionImage")?.Url() ?? "";
    var backgroundColor = Model.Value<ColorPickerValueConverter.PickedColor>("reviewsBackgroundColor")?.Label ?? "light";
    var displaySection = Model?.Value<bool>("displayReviewsSection") ?? false;
    var stars = Model?.Value<int>("reviewsSectionNrOfStars") ?? 0;
}

@if (displaySection)
{
    <section id="great-reviews" class="bg-@backgroundColor">
        <div class="container">
            <div class="text-content">
                <div class="section-title">
                    <span>@Model?.Value("reviewsSectionTitle")</span>
                    <h2>@Model?.Value("reviewsSectionHeading")</h2>
                </div>
                <div class="text-ratings">
                    <p class="paragraph">@Model?.Value("reviewsSectionParagraph")</p>
                    <div class="stars">
                        @for (int i = 0; i < stars; i++)
                        {
                            <i class="fa-solid fa-star"></i>
                        }
                    </div>
                    <p class="writer">@Model?.Value("reviewsSectionAuthor")</p>
                    <div class="company-text">@Model?.Value("reviewsSectionCompany")</div>
                </div>
            </div>
            <img src="@articleImage" alt="image of kevin gardener">
        </div>
    </section>
}

